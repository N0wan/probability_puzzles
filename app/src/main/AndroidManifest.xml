<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atorch.statspuzzles"
    android:versionCode="26"
    android:versionName="3.5" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="android.max_aspect" android:value="2.5"/>
        <activity
            android:name=".PuzzleSelection"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SolvePuzzle"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_solve_puzzle"
            android:parentActivityName=".PuzzleSelection" >
        </activity>
        <activity
            android:name=".NewSettingsActivity"
            android:label="@string/title_activity_new_settings"
            android:parentActivityName=".PuzzleSelection" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="PuzzleSelection" />
        </activity>
    </application>

</manifest>
